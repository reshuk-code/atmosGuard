                <div class="location-search-container">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text"
                               id="locationSearch"
                               placeholder="Enter your city, state, or zip code"
                               required>
                        <div class="search-suggestions" id="locationSuggestions"></div>
