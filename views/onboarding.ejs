                    <button class="nav-btn next" onclick="nextStep()">
                        Continue <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </div>

            <!-- Step 3: Age -->
            <div class="form-step" id="step3">
                <div class="content-header">
                    <h3>What's your age?</h3>
                    <p>Age affects how your skin reacts to UV exposure and helps us provide age-appropriate protection advice.</p>
                </div>

                <div class="age-selection">
                    <div class="age-input-container">
                        <div class="age-input-wrapper">
                            <div class="age-input">
                                <input type="number"
                                       id="ageInput"
                                       name="age"
                                       min="1"
                                       max="120"
                                       value="30"
                                       required>
                                <span class="age-unit">years old</span>
                            </div>

                            <div class="age-slider">
                                <input type="range"
                                       id="ageSlider"
                                       min="1"
                                       max="120"
                                       value="30"
                                       step="1">
                                <div class="age-categories">
                                    <div class="age-category" data-min="1" data-max="12">
                                        <i class="fas fa-child"></i>
                                        <span>Child</span>
                                    </div>
                                    <div class="age-category" data-min="13" data-max="19">
                                        <i class="fas fa-user-graduate"></i>
                                        <span>Teen</span>
                                    </div>
                                    <div class="age-category" data-min="20" data-max="39">
                                        <i class="fas fa-user"></i>
                                        <span>Adult</span>
                                    </div>
                                    <div class="age-category" data-min="40" data-max="59">
                                        <i class="fas fa-user-tie"></i>
                                        <span>Middle</span>
                                    </div>
                                    <div class="age-category" data-min="60" data-max="120">
                                        <i class="fas fa-user-friends"></i>
                                        <span>Senior</span>
                                    </div>
